{
  "manifest_version": 2,

  "name": "Bizfly",
  "description": "",
  "version": "0.1",

  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "popup.html"
  },

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": [
        "http://*.cyberbiz.co.local/*",
        "http://*.cyberbiz.v3.local/*",
        "http://*.testcyb.info/*",
        "http://*.cyberbiz.co/*",
        "https://*.cyberbiz.co.local/*",
        "https://*.cyberbiz.v3.local/*",
        "https://*.testcyb.info/*",
        "https://*.cyberbiz.co/*",
        "https://*.cyberbiz.tw/*",
        "https://*.com/*",
        "https://*.tw/*",
        "http://*.com/*",
        "http://*.tw/*"
      ],
      "js": ["jquery.js", "main.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ]
}
